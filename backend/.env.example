# ==================== CORE CONFIGURATION ====================
# Application
APP_NAME=IntelliRate Gateway
APP_VERSION=1.0.0
DEBUG=True
LOG_LEVEL=INFO

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ==================== DATABASE ====================
DATABASE_URL=postgresql://intellirate:intellirate123@db:5432/intellirate

# ==================== REDIS ====================
REDIS_URL=redis://redis:6379/0
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# ==================== AWS CONFIGURATION ====================
# Get these from AWS IAM Console: https://console.aws.amazon.com/iam/
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key
AWS_DEFAULT_REGION=us-east-1

# ==================== SAGEMAKER ENDPOINTS ====================
# These will be provided after running deploy_to_aws.py
ISOLATION_FOREST_ENDPOINT_NAME=isolation-forest-endpoint
XGBOOST_ENDPOINT_NAME=xgboost-limiter-endpoint
PROPHET_ENDPOINT_NAME=prophet-forecaster-endpoint

# ==================== S3 STORAGE ====================
S3_BUCKET_NAME=intellirate-ml-models
S3_MODEL_PREFIX=models/v1/

# ==================== ML SERVICE CONFIGURATION ====================
# Set to true to use AWS SageMaker, false to use local models
USE_CLOUD_ML=false
ML_PREDICTION_TIMEOUT=5
ML_RETRY_ATTEMPTS=3
ML_RETRY_BACKOFF=2

# ==================== FALLBACK CONFIGURATION ====================
# Enable local models as fallback if AWS is unavailable
ENABLE_ML_FALLBACK=true
FALLBACK_WARNING_THRESHOLD=0.7

# ==================== CACHING ====================
ML_PREDICTION_CACHE_TTL=300
ML_FEATURES_CACHE_TTL=60

# ==================== MONITORING ====================
CLOUD_ML_HEALTH_CHECK_INTERVAL=60
LOG_CLOUD_ML_REQUESTS=true
TRACK_CLOUD_ML_LATENCY=true

# ==================== CORS ====================
# Add your frontend URLs here (comma-separated)
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:5173
